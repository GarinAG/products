{
    "name": "Intergit/Products",
    "type": "library",
    "description": "Товары",
    "keywords": [
        "Intergit",
        "Products"
    ],
    "homepage": "https://github.com/Intergit/Products",
    "license": "MIT",
    "authors": [
        {
            "name": "Arthur Garin",
            "email": "garin.ag1989@gmail.com",
            "homepage": "dglobe.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.5|~7.0",
        "kalnoy/nestedset": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "Intergit\\Products\\": "src/",
            "Intergit\\Products\\Http\\Controllers\\": "src/Http/Controllers/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Intergit\\Products\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
